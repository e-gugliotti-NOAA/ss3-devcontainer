{
	"name": "R (rocker/r-ver base)",
    "image": "ghcr.io/rocker-org/devcontainer/r-ver:latest",

	"features": {
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "make,gcc,g++,cmake,clang-tidy,clang-format"
		},
	    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": "cli,rlang,github::r4ss/r4ss,github::ss3sim/ss3sim,github::PIFSCstockassessments/ss3diags,ggplot2,dplyr,scales,covr",
			"installSystemRequirements": true
		}
	},
    "postCreateCommand": "bash .devcontainer/ss3-exe-download.sh"
}
